    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Rughai: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Rughai: Scene Editor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scene_editor/scene_editor.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["r_0_0"]
        }
    ]
}